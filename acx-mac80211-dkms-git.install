post_install() {
    dkms install -m acx-mac80211 -v ${1%-*}

    cat << EOF
>>> You may want to load 'acx-mac80211'.
EOF
}

pre_remove() {
    cat << EOF
>>> Removing 'acx-mac80211/${1%-*}
EOF
    dkms remove -m acx-mac80211 -v ${1%-*} --all
}


post_upgrade() {
    post_install $1
}

pre_upgrade() {
    pre_remove $1
}
